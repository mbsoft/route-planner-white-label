# NextBillion API Configuration (Required)
NEXTBILLION_API_KEY=your_nextbillion_api_key_here

# Turso Database Configuration
TURSO_DATABASE_URL=your_turso_database_url_here
TURSO_AUTH_TOKEN=your_turso_auth_token_here

# Authentication Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_admin_password_here
DISPATCHER_USERNAME=dispatcher
DISPATCHER_PASSWORD=your_secure_dispatcher_password_here
USER_USERNAME=user
USER_PASSWORD=your_secure_user_password_here

# Company Branding Configuration
COMPANY_NAME=Your Company Name
COMPANY_LOGO=/your_logo.png
COMPANY_COLOR=#D36784

# Theme Customization (Optional - will fallback to defaults if not set)
# Colors
THEME_PRIMARY_COLOR=#D36784
THEME_SECONDARY_COLOR=#dc004e
THEME_BACKGROUND_COLOR=#ffffff
THEME_PAPER_COLOR=#ffffff
THEME_TEXT_PRIMARY=#000000
THEME_TEXT_SECONDARY=#666666
THEME_ERROR_COLOR=#d32f2f
THEME_WARNING_COLOR=#ed6c02
THEME_INFO_COLOR=#0288d1
THEME_SUCCESS_COLOR=#2e7d32

# Typography
THEME_FONT_FAMILY="Roboto", "Helvetica", "Arial", sans-serif
THEME_FONT_SIZE_SMALL=0.875rem
THEME_FONT_SIZE_MEDIUM=1rem
THEME_FONT_SIZE_LARGE=1.25rem

# Layout
THEME_BORDER_RADIUS=4px
THEME_SPACING_UNIT=8

# Git Information (set by next.config.js)
NEXT_PUBLIC_GIT_COMMIT=
NEXT_PUBLIC_LAST_UPDATED=
NEXT_PUBLIC_VERSION=

# Next.js configuration
NODE_ENV=development

# Use case configuration: 'jobs' or 'shipments'
USE_CASE=jobs 
# Capacity Types Configuration
CAP_TYPE_1=ULSD_CLEAR
CAP_TYPE_2=ULSD_DYED
CAP_TYPE_3=GASOLINE_UNL
CAP_TYPE_4=GASOLINE_UNL_PRE
CAP_TYPE_5=REC_90_GASOLINE
CAP_TYPE_6=DEF

# Client-side accessible capacity types (for popup display)
NEXT_PUBLIC_CAP_TYPE_1=ULSD_CLEAR
NEXT_PUBLIC_CAP_TYPE_2=ULSD_DYED
NEXT_PUBLIC_CAP_TYPE_3=GASOLINE_UNL
NEXT_PUBLIC_CAP_TYPE_4=GASOLINE_UNL_PRE
NEXT_PUBLIC_CAP_TYPE_5=REC_90_GASOLINE
NEXT_PUBLIC_CAP_TYPE_6=DEF
